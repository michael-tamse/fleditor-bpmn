{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Flowable BPMN Editor",
  "version": "0.0.0",
  "identifier": "com.example.fleditorbpmn",
  "build": {
    "beforeDevCommand": "vite --strictPort --port 5173",
    "beforeBuildCommand": "vite build",
    "devUrl": "http://localhost:5173/index.html",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "BPMN Editor (Tauri Host)",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "label": "main"
      }
    ]
  },
  "bundle": {
    "fileAssociations": [
      {
        "name": "Flowable BPMN 2.0",
        "description": "Flowable process diagram",
        "ext": ["bpmn", "bpmn20.xml", "process.bpmn20.xml"],
        "mimeType": "application/vnd.flowable.bpmn20+xml",
        "role": "Editor"
      }
    ]
  },
  "plugins": {
    "fs": {
      "scope": ["**"]
    }
  }
}
